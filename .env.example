# InnoHack 2026 - Environment Variables
# Copy this file to .env.local and fill in your values

# ============================================
# RAZORPAY CONFIGURATION
# ============================================
# Get your keys from https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Public key for frontend (exposed to browser)
NEXT_PUBLIC_RAZORPAY_KEY_ID=your_razorpay_key_id

# ============================================
# DATABASE (Choose one)
# ============================================
# MongoDB
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/innohack?retryWrites=true&w=majority

# PostgreSQL (with Prisma)
# DATABASE_URL=postgresql://username:password@localhost:5432/innohack?schema=public

# ============================================
# EMAIL SERVICE (Choose one)
# ============================================
# SendGrid
# SENDGRID_API_KEY=your_sendgrid_api_key

# AWS SES
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=ap-south-1

# ============================================
# ANALYTICS & MONITORING
# ============================================
# Google Analytics
# NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry (Error Tracking)
# SENTRY_DSN=https://xxx@sentry.io/xxx
# SENTRY_AUTH_TOKEN=your_sentry_auth_token

# ============================================
# GENERAL
# ============================================
# App URL (used for absolute URLs in emails, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Node environment
NODE_ENV=development

# ============================================
# AUTHENTICATION (Optional - for admin panel)
# ============================================
# NextAuth.js
# NEXTAUTH_URL=http://localhost:3000
# NEXTAUTH_SECRET=your_nextauth_secret

# ============================================
# CLOUD STORAGE (Optional - for file uploads)
# ============================================
# AWS S3
# AWS_S3_BUCKET=your_bucket_name
# AWS_S3_REGION=ap-south-1

# Cloudinary
# CLOUDINARY_CLOUD_NAME=your_cloud_name
# CLOUDINARY_API_KEY=your_api_key
# CLOUDINARY_API_SECRET=your_api_secret
